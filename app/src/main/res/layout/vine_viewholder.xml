<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:id="@+id/vines_card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#AA000000"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    card_view:contentPaddingTop="40dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/username_textview"
            android:text="username goes here"
            android:textColor="#FFF899"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/liked_textview"
            android:text="liked data goes here"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_below="@id/username_textview"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>